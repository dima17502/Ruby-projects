 puts "Введите коэффициенты"
 a = gets.to_i
 b = gets.to_i
 c = gets.to_i
 d = b ** 2 - 4 * a * c
 if d > 0
 	x1 = (-b  + Math.sqrt(d))/(2.0 * a)
 	x2 = (-b - Math.sqrt(d))/(2.0 * a)
 	puts "Дискриминант: #{d} Первый корень: #{x1} Второй корень: #{x2}"
 elsif d == 0
 	x = -b / (2.0 * a)
 	puts "Дискриминант: #{d} Корень: #{x}"
 else
 	puts "Дискриминант: #{d} Корней нет"
 end
